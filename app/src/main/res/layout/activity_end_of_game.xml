<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndOfGameActivity"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/crashed_plane"
        />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="GAME OVER"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_70dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_Reset_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_game"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="90dp"
        android:backgroundTint="@color/lightBlue400"
        android:textColor="@color/black"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_TopTen"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/top_ten"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/lightBlue400"
        android:textColor="@color/black"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mainEnd_ScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="SCORE"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mainEnd_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        tools:text="000" />

</RelativeLayout>